<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.wzpmc.filemanager.dao.UserDao">
    <insert id="addUser" useGeneratedKeys="true" keyProperty="id">
        insert into `users`(`username`,`password`,`lastLoginedIP`) values (#{username}, #{password}, #{lastLoginedIP});
    </insert>
    <update id="updateUserIP">
        update `users` set `lastLoginedIP` = #{lastLoginedIP} where `username` = #{username} and `id` = #{id};
    </update>

    <select id="getUser" resultType="cn.wzpmc.filemanager.entities.User">
        select `id`,`username`,`lastLoginedIP` from `users` where `username` = #{username} and `password` = #{password};
    </select>
</mapper>